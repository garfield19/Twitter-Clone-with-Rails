<center><h2>Sign up</h2></center>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :hub_type %><br />
    <%= f.text_field :hub_type, class: "form-control"%>
  </div>
<div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name,  class: "form-control"%>
  </div><div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name,  class: "form-control"%>
  </div><div class="field">
    <%= f.label :about %><br />
    <%= f.text_field :about,  class: "form-control"%>
  </div><div class="field">
    <%= f.label :avatar %><br />
    <%= f.text_field :avatar,  class: "form-control"%>
  </div><div class="field">
    <%= f.label :interest %><br />
    <%= f.text_field :interest,  class: "form-control"%>
  </div><div class="field">
    <%= f.label :birthday %><br />
    <%= f.text_field :birthday,  class: "form-control"%>
  </div><div class="field">
    <%= f.label :cover_img %><br />
    <%= f.text_field :cover_img, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,class: "btn btn-warning" %>
  </div>
<% end %>

