<%= form_tag conversations_path, method: :post do %>
	<div>
		<%= select_tag :user_id, options_from_collection_for_select(@recepients, :id, :name) %>
	</div>
	<div>
		<%= text_field_tag :subject, nil, placeholder: "Subject" %>
	</div>
	<div>
		<%= text_area_tag :body, nil, placeholder: "Send a memo" %>
	</div>

	<%= submit_tag %>
<% end %>
