<%= simple_form_for @message, :html => {:multipart => true} do |f| %>
	<%= f.collection_select :category_id, Category.all,:id , :name, {prompt: "Choose a category"},label: "Category", class: "form-control"%>
  <%= f.input :title, label: "Message Title" %>
  <%= f.input :description %>
  <%= f.input :contact, label: "Phone Number" %>
  <div class="field">
    
    <%= f.file_field :avatar %>
  </div>
  <%= f.button :submit %>
<% end %>